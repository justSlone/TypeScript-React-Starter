{
  "extends": [],
  "defaultSeverity": "error",
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "brace-style": [
      true,
      "stroustrup",
      {
        "allowSingleLine": true
      }
    ]
  },
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules"
  ]
}